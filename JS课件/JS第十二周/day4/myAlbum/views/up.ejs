<% include pub/head.pub.ejs%>

<div class="container">
    <form action="/up" style="width: 40%" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="wenjianjia">选择文件夹</label>
            <select name="wenjianjia" class="form-control" id="wenjianjia">
                <% for(var i=0; i<albums.length; i++){%>
                <option><%= albums[i]%></option>
                <%}%>
            </select>
        </div>
        <div class="form-group">
            <label for="exampleInputFile">上传文件</label>
            <mark class="help-block">图片的尺寸不能大于2M</mark>
            <input type="file" name="tupian" id="exampleInputFile">
        </div>
        <button type="submit" class="btn btn-default">上传图片</button>
    </form>
</div>
<script src="/js/jquery.js"></script>
<script src="/js/bootstrap.js"></script>
</body>
</html>